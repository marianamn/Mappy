extends ../_layout
block content
    .col-md-6.col-md-offset-3
        h3.text-center Test Your Knowledge Ranking

        ul
            table.table.table-striped.table-hover
                thead
                    tr
                    th #
                    th User name
                    th.text-center Test your knowledge score
                tbody
                each user in result
                    tr.active
                    td=li=result.indexOf(user) + 1
                    td=li=user.username
                    td.text-center=li=user.testYourKnowledgeScore

        p.text-center
            a.btn.btn-primary(href="/rankings") Back to ranking