extends ../_layout

block styles
	link(rel="stylesheet", href="/static/bower_components/toastr/toastr.css")

block headScripts
	script(type='text/javascript', src='/static/js/utils/validator.js')
	script(type='text/javascript', src='/static/bower_components/toastr/toastr.js')

block content
	.container
		.col-md-6.col-md-offset-3
			.well
				div(class='form-horizontal')
					fieldset
						legend Register
						.form-group
							label.col-md-2.control-label(for="username") Username*
							.col-md-10
								input.form-control(id="username" type="text" name="username" placeholder="Username" required)
						.form-group
							label.col-md-2.control-label(for="email") Email*
							.col-md-10
								input.form-control(id="email" type="email" name="email" placeholder="Email" required)
						.form-group
							label.col-md-2.control-label(for="firstName") First Name*
							.col-md-10
								input.form-control(id="firstName" type="text" name="firstName" placeholder="First Name" required)
						.form-group
							label.col-md-2.control-label(for="lastName") Last Name*
							.col-md-10
								input.form-control(id="lastName" type="text" name="lastName" placeholder="Last Name" required)
						.form-group
							label.col-md-2.control-label(for="password") Password*
							.col-md-10
								input.form-control(id="password" type="password" name="password" placeholder="Password" required)
						.form-group
							label.col-md-2.control-label(for="confirmPassword") Confirm Password*
							.col-md-10
								input.form-control(id="confirmPassword" type="password" name="confirmPassword" placeholder="Confirm Password" required)
						.form-group
							label.col-md-2.control-label(for="profileImgURL") Profile image
							.col-md-10
								input.form-control(id="profileImgURL" type="text" name="profileImgURL" placeholder="Profile Image URL")
						.form-group
							col-md-10.col-md-offset-2
								button(type="reset" class="btn btn-primary") Cancel
								button(id="btn-register", class="btn btn-success") Register
	script(type='text/javascript', src='/static/js/register.js')